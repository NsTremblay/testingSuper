	<script type="text/javascript">

	var mapFactory;
	var map;
	var marker;

	//This disables the enter key from submitting the form to an empty url
	$(function(){
		$("#location").keypress(function(e){
			var k=e.keyCode || e.which;
			if(k==13){
				e.preventDefault();
			}
		});
	});

	function showMap() {
		var mapOptions = {
			center: new google.maps.LatLng(-0.000, 0.000),
			zoom: 1,
			streetViewControl: false,
			mapTypeId: google.maps.MapTypeId.ROADMAP
		};

		mapFactory = new Map(mapOptions, "map-canvas");
		map = mapFactory.initializeMap();

		google.maps.event.addListener(map, 'click', function(event) {
			marker = mapFactory.clickAddMarker(event.latLng, map);
			$('#coordinates input').empty();
			$('#coordinates input').val(marker.getPosition().toString());
		});
	}

	</script>