$('#strain-autocomplete').keyup( function() {
	filterGenomes();
});

function filterGenomes() {
	var filteredList = {};
	var searchTerm = $('#strain-autocomplete').val().toLowerCase();
	$.each(genomeLabels, function(feature_id, label) {
		var name = label.toLowerCase();
		if (name.indexOf(searchTerm) > -1) {
			filteredList[feature_id] = public_genomes[feature_id];
		}
	});
	appendFilteredList(filteredList , 'genome');
}

function appendFilteredList(obj , list) {
	var dropDown = $('#pubStrainList');
	var strainsAlreadyInGroups = groupsList();
	dropDown.empty();
	$('#select-all-genomes').is(':checked') ? $('#select-all-genomes').click() : 0;
	var visibleData = [];
	$('input[name="list-meta-option"]:checked').each( function(i, e) { visibleData.push( $( e ).val() ); });
	if(typeof visibleData === 'undefined' || visibleData.length == 0) {
		visibleData = ['name'];
	}
	$.each( obj, function(feature_id, genome_obj) {
		var lab = metaLabel(obj[feature_id], visibleData);
		dropDown.append(
			'<li style="list-style-type:none">'+
			'<label class="checkbox" for="'+feature_id+'"><input id="'+feature_id+'" class="checkbox" type="checkbox" value="'+feature_id+'" name="genomes-in-list"/>'+lab+'</label>'+
			'</li>'
			);
		if (strainsAlreadyInGroups.indexOf(feature_id) > -1) {
			selectInList(feature_id, true);
		}
		else {
			selectInList(feature_id, false);
		}
	});
}

$('#modal-email-results').click( function(e) {
	e.preventDefault();
	var user_email = $('input[name="modal-user-email"]');
	var user_email_confirmed = $('input[name="modal-user-email-confirmed"]');
	$('#modal-warning').empty();
	if (user_email.val() == "" || user_email_confirmed.val() == "") {
		$('#modal-warning').append('<div class="alert alert-error"><button type="button" class="close" data-dismiss="alert">&times;</button>Fill in all fields of the form.</div>');
		return 0;
	}
	if (user_email.val() != user_email_confirmed.val()) {
		$('#modal-warning').append('<div class="alert alert-error"><button type="button" class="close" data-dismiss="alert">&times;</button>Email addresses do not match</div>');
		return 0;
	}
	else {
		$('input[name="user-email"]').val(user_email.val());
		$('input[name="user-email-confirmed"]').val(user_email_confirmed.val());
		$('input[name="email-results"]').prop("checked", true);
		$('#groupedForm').submit();
	}
});
