<!DOCTYPE html>
<html>

<TMPL_INCLUDE NAME="header.tmpl">

<TMPL_INCLUDE NAME="nav_bar.tmpl">

<body onload="onLoadCheck()" style="background-color:#796e6c">

	<div class="container" style="background-color:#FFFFFF">

		<div style="margin:10px 10px 10px 10px;padding:10px 10px 10px 10px">
			<h1>Strain Information</h1>
		</div>

		<div class="row-fluid">
			<TMPL_INCLUDE NAME="strain_info_form_with_map.tmpl">

			<div class="span8">

				<div id="svgCanvas" style="display:none;border-width:1px;border-style:solid;border-color:#d3d3d3;margin-right:5px">
					<TMPL_INCLUDE NAME="phylogeny_single_strain.tmpl">
				</div>

			</div>

			<div class="row-fluid" id="strainInfoDiv" style="display:none;margin:10px 10px 10px 0px">

				<div class="span6" style="height:300px;overflow:auto;margin-top:10px">
					<table class="table table-striped table-condensed">
						<thead></thead>
						<tr>
							<th>Virulence Factors</th>
						</tr>
						<TMPL_LOOP NAME=VIRDATA><tr><td><TMPL_VAR NAME=data></td></tr></TMPL_LOOP>
					</table>
				</div>

				<div class="span6" style="height:300px;overflow:auto;margin-top:10px">
					<table class="table table-striped table-condensed">
						<thead></thead>
						<tr>
							<th>AMR Genes</th>
						</tr>
						<TMPL_LOOP NAME=AMRDATA><tr><td><TMPL_VAR NAME=data></td></tr></TMPL_LOOP>
					</table>
				</div>

			</div>

		</div>

	</div>

	<div id="validator" style="display:none"><TMPL_VAR NAME=VALIDATOR></div>

	<script>

	var strainJson = <TMPL_VAR NAME=strainJSONData>;

	$('#uniqueNameView').click(function () {
		var availableTags = [];
		$('#pubStrainList').empty();
		for (i=0 ; i<strainJson.data.length ; i++) {
			var opt = document.createElement("option");
			var description = document.createTextNode(strainJson.data[i].uniquename);
			opt.value = strainJson.data[i].uniquename;
			opt.appendChild(description);
			document.getElementById('pubStrainList').appendChild(opt);

			availableTags.push( { label:strainJson.data[i].uniquename, value:strainJson.data[i].uniquename } );
		}
		$("#autoComp").autocomplete({
			source: availableTags,
			select: function( event, ui ) {
			            $("#autoComp").val( ui.item.label ); // Display the label, but set the hidden input to the value
			            $("#autoComp_hidden").val( ui.item.value );
			            return false;
			        }
			    });
	});

	$('#commonNameView').click(function () {
		$('#pubStrainList').empty();
		var availableTags = [];
		for (i=0 ; i<strainJson.data.length ; i++) {
			var opt = document.createElement("option");
			var description = document.createTextNode(strainJson.data[i].featureprops.value);
			opt.value = strainJson.data[i].uniquename;
			opt.appendChild(description);
			document.getElementById('pubStrainList').appendChild(opt);

			availableTags.push( { label:strainJson.data[i].featureprops.value, value:strainJson.data[i].uniquename } );
		}
		$("#autoComp").autocomplete({
			source: availableTags,
			select: function( event, ui ) {
			            $("#autoComp").val( ui.item.label ); // Display the label, but set the hidden input to the value
			            $("#autoComp_hidden").val( ui.item.value );
			            return false;
			        }
			    });
	});

	</script>

</body>

<TMPL_INCLUDE NAME="footer.tmpl">

</html>