	<script>
		$('#sSSearchButton').click(function(){
			checkSSFields(sSSearchForm);
		});
	</script>	
	<script type="text/javascript">
	function checkSSFields(sSSearchForm) {
		if (sSSearchForm.singleStrainName.value == "") {
			alert("You must enter a valid search term.");
			return false;
		}
		else {
			$('#sSSearchForm').submit();
			return true;
		}
	}
